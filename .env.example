# Domain-Shift ML Platform Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=dsml_user
POSTGRES_PASSWORD=dsml_password_change_me
POSTGRES_DB=dsml_db
POSTGRES_PORT=5432

# MLflow Database (created by init.sql)
MLFLOW_DB=mlflow_db

# =============================================================================
# MLflow Configuration
# =============================================================================
MLFLOW_PORT=5001
MLFLOW_TRACKING_URI=http://localhost:5001

# =============================================================================
# Application Configuration
# =============================================================================
APP_PORT=8000
APP_ENV=development
LOG_LEVEL=INFO

# =============================================================================
# Open-Meteo API Configuration
# =============================================================================
# No API key required for Open-Meteo
OPEN_METEO_BASE_URL=https://api.open-meteo.com/v1

# Default location for weather data (example: San Francisco)
DEFAULT_LATITUDE=37.7749
DEFAULT_LONGITUDE=-122.4194

# =============================================================================
# Domain Shift Detection Configuration
# =============================================================================
# Threshold for triggering model retraining (e.g., KS statistic > 0.1)
DRIFT_THRESHOLD=0.1

# Window size for drift detection (hours)
DRIFT_WINDOW_HOURS=24

# Minimum samples required for drift detection
MIN_SAMPLES_FOR_DRIFT=100

# =============================================================================
# Model Configuration
# =============================================================================
# Baseline model parameters
MODEL_NAME=weather_predictor
MODEL_RANDOM_STATE=42
